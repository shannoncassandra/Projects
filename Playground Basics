# turn on the little red LED light
from adafruit_circuitplayground.express import cpx
while True:
    cpx.red_led = True
    
# Blinky
import time
from adafruit_circuitplayground.express import cpx
while True:
    cpx.red_led = True
    time.sleep(0.5)
    cpx.red_led = False
    time.sleep(0.5)
    
# lil manual switch
from adafruit_circuitplayground.express import cpx
while True:
    if cpx.switch:
        cpx.red_led = True
    else:
        cpx.red_led = False
# OR (shorter)
while True:
    cpx.red_led = cpx.switch
    
# shaking
from adafruit_circuitplayground.express import cpx
while True:
    if cpx.shake(shake_threshold=20):
        print("Shake detected!")
        cpx.red_led = False
    else:
        cpx.red_led = True
        
# Tones
# cpx.play_tone(275, 1) C
# cpx.play_tone(294, 1) D
# cpx.play_tone(330, 1) E
# cpx.play_tone(349, 1) F
# cpx.play_tone(440, 1) G
# cpx.play_tone(494, 1) A
# cpx.play_tone(523, 1) B

# Tap
from adafruit_circuitplayground.express import cpx

import time

cpx.pixels.brightness = .01

# Set to check for single-taps.
cpx.detect_taps = 1
tap_count = 0

# We're looking for 2 single-taps before moving on.
while tap_count < 2:
    if cpx.tapped:
        cpx.pixels[0] = (255, 255, 255)
	tap_count +=1

# Now switch to checking for double-taps.
tap_count = 0
cpx.detect_taps = 2

# We're looking for 2 double-taps before moving on.
while tap_count < 2:
    if cpx.tapped:
	cpx.pixels[1] = (255, 0, 255)
	tap_count +=1

while tap_count < 3:
    if cpx.tapped:
	cpx.pixels[2] = (255, 0, 0)
  
  
  
  
 
